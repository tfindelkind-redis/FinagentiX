# Azure OpenAI Configuration
# Copy this file to .env and fill in your values

# Azure Infrastructure
AZURE_ENV_NAME=dev
AZURE_LOCATION=westus3
AZURE_RESOURCE_GROUP=finagentix-dev-rg

# Azure OpenAI Service
AZURE_OPENAI_ENDPOINT=https://openai-<RESOURCE_ID>.openai.azure.com/
AZURE_OPENAI_API_KEY=<your-api-key>
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# Model Deployments
AZURE_OPENAI_GPT4_DEPLOYMENT=gpt-4o
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-large

# Azure Storage
AZURE_STORAGE_ACCOUNT_NAME=st<RESOURCE_ID>
AZURE_STORAGE_CONNECTION_STRING=<your-connection-string>

# Azure Redis Enterprise
REDIS_HOST=redis-<RESOURCE_ID>.eastus.redis.azure.net
REDIS_PORT=10000
REDIS_PASSWORD=<your-redis-password>
REDIS_SSL=true

# Feature Store
FEATUREFORM_HOST=localhost
FEATUREFORM_PORT=7878

# Application Settings
ENVIRONMENT=dev
LOG_LEVEL=INFO
