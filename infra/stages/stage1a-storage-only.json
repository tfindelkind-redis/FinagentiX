      "metadata": {
        "description": "Primary location for resources"
      }
    },
    "resourceToken": {
      "type": "string",
      "metadata": {
        "description": "Unique resource token"
      }
    },
    "storageSubnetId": {
      "type": "string",
      "metadata": {
        "description": "Storage subnet ID from Stage 0"
      }
    },
    "privateDnsZoneIdStorage": {
      "type": "string",
      "metadata": {
        "description": "Private DNS Zone ID for Storage from Stage 0"
      }
